<mvc:View busy="{detailView>/busy}"  busyIndicatorDelay="{detailView>/delay}" controllerName="translations.controller.Detail" xmlns:semantic="sap.f.semantic" xmlns="sap.ui.table" xmlns:mvc="sap.ui.core.mvc" xmlns:u="sap.ui.unified" xmlns:m="sap.m" height+
="100%">                                                                                                                                                                                                                                                       
    <semantic:SemanticPage id="detailPage" preserveHeaderStateOnScroll="true" toggleHeaderOnTitleClick="false">                                                                                                                                                
        <semantic:titleHeading>                                                                                                                                                                                                                                
            <m:Title id="listPageTitle" text="Translations ({detailView>/numberOfLines})" level="H2" />                                                                                                                                                        
        </semantic:titleHeading>                                                                                                                                                                                                                               
        <semantic:fullScreenAction>                                                                                                                                                                                                                            
            <semantic:FullScreenAction press="toggleFullScreen" />                                                                                                                                                                                             
        </semantic:fullScreenAction>                                                                                                                                                                                                                           
        <semantic:content>                                                                                                                                                                                                                                     
            <Table id="table" selectionMode="None" rows="{ path: 'translation>to_Translations', parameters:{ expand : 'to_parent' } }" visibleRowCountMode="Auto" enableCellFilter="{ui>/cellFilterOn}" filter="filterPrice" ariaLabelledBy="title">           
                <extension>                                                                                                                                                                                                                                    
                    <m:OverflowToolbar style="Clear">                                                                                                                                                                                                          
                        <m:Title id="title" text="{translation>Ddlxname}" />                                                                                                                                                                                   
                        <m:ToolbarSeparator />                                                                                                                                                                                                                 
                        <m:SearchField placeholder="Filter" value="" search="onFilterTranslations" width="15rem" />                                                                                                                                            
                        <m:ToolbarSpacer />                                                                                                                                                                                                                    
                        <m:Button icon="sap-icon://save" press="onSave" type="Accept" text="Save" />                                                                                                                                                           
                        <m:Button text="Transport" icon="sap-icon://add-product" press="onSelectTransport" />                                                                                                                                                  
                    </m:OverflowToolbar>                                                                                                                                                                                                                       
                </extension>                                                                                                                                                                                                                                   
                <rowSettingsTemplate>                                                                                                                                                                                                                          
                    <RowSettings highlight="{ parts:['translation>EnglishTranslation', 'translation>DutchTranslation', 'translation>FrenchTranslation','translation>GermanTranslation'], formatter: '.formatHighlight' }" />                                   
                </rowSettingsTemplate>                                                                                                                                                                                                                         
                <columns>                                                                                                                                                                                                                                      
                    <Column width="11rem" sortProperty="Element" filterProperty="Element">                                                                                                                                                                     
                        <m:Label text="Element" />                                                                                                                                                                                                             
                        <template>                                                                                                                                                                                                                             
                            <m:Text text="{translation>Element}" wrapping="false" />                                                                                                                                                                           
                        </template>                                                                                                                                                                                                                            
                    </Column>                                                                                                                                                                                                                                  
                    <Column width="11rem" sortProperty="Value" filterProperty="Value">                                                                                                                                                                         
                        <m:Label text="Value" />                                                                                                                                                                                                               
                        <template>                                                                                                                                                                                                                             
                            <m:Text text="{translation>Value}" wrapping="false" />                                                                                                                                                                             
                        </template>                                                                                                                                                                                                                            
                    </Column>                                                                                                                                                                                                                                  
                    <Column width="11rem" sortProperty="EnglishTranslation" filterProperty="EnglishTranslation">                                                                                                                                               
                        <m:Label text="English" />                                                                                                                                                                                                             
                        <template>                                                                                                                                                                                                                             
                            <m:Input showValueStateMessage="false" valueState="{= ${translation>EnglishTranslationChanged} === true ? 'Information' : 'None' }" value="{translation>EnglishTranslation}" editable="{= ${translation>to_parent/MasterLanguage} +
!== 'EN' }" change="onValueChange" />                                                                                                                                                                                                                          
                        </template>                                                                                                                                                                                                                            
                    </Column>                                                                                                                                                                                                                                  
                    <Column width="11rem" sortProperty="DutchTranslation" filterProperty="DutchTranslation">                                                                                                                                                   
                        <m:Label text="Dutch" />                                                                                                                                                                                                               
                        <template>                                                                                                                                                                                                                             
                            <m:Input showValueStateMessage="false" valueState="{= ${translation>DutchTranslationChanged} === true ? 'Information' : 'None' }" change="onValueChange" value="{translation>DutchTranslation}" editable="{= ${translation>to_pare+
nt/MasterLanguage} !== 'NL' }" />                                                                                                                                                                                                                              
                        </template>                                                                                                                                                                                                                            
                    </Column>                                                                                                                                                                                                                                  
                    <Column width="11rem" sortProperty="FrenchTranslation" filterProperty="FrenchTranslation">                                                                                                                                                 
                        <m:Label text="French" />                                                                                                                                                                                                              
                        <template>                                                                                                                                                                                                                             
                            <m:Input showValueStateMessage="false" valueState="{= ${translation>FrenchTranslationChanged} === true ? 'Information' : 'None' }" change="onValueChange" value="{translation>FrenchTranslation}" editable="{= ${translation>to_pa+
rent/MasterLanguage} !== 'FR' }" />                                                                                                                                                                                                                            
                        </template>                                                                                                                                                                                                                            
                    </Column>                                                                                                                                                                                                                                  
                    <Column width="11rem" sortProperty="GermanTranslation" filterProperty="GermanTranslation">                                                                                                                                                 
                        <m:Label text="German" />                                                                                                                                                                                                              
                        <template>                                                                                                                                                                                                                             
                            <m:Input showValueStateMessage="false" valueState="{= ${translation>GermanTranslationChanged} === true ? 'Information' : 'None' }" change="onValueChange" value="{translation>GermanTranslation}" editable="{= ${translation>to_pa+
rent/MasterLanguage} !== 'DE' }" />                                                                                                                                                                                                                            
                        </template>                                                                                                                                                                                                                            
                    </Column>                                                                                                                                                                                                                                  
                </columns>                                                                                                                                                                                                                                     
                <!-- <footer>                                                                                                                                                                                                                                  
                    <m:OverflowToolbar>                                                                                                                                                                                                                        
                        <m:ToolbarSpacer />                                                                                                                                                                                                                    
                        <m:Button icon="sap-icon://save" press="onSave" type="Accept" text="Save" />                                                                                                                                                           
                    </m:OverflowToolbar>                                                                                                                                                                                                                       
                </footer> -->                                                                                                                                                                                                                                  
            </Table>                                                                                                                                                                                                                                           
        </semantic:content>                                                                                                                                                                                                                                    
    </semantic:SemanticPage>                                                                                                                                                                                                                                   
</mvc:View>                                                                                                                                                                                                                                                    
                                                                                                                                                                                                                                                               